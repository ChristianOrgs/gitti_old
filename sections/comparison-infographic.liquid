{%- assign image_desktop = section.settings.image_desktop -%}
{%- assign image_mobile = section.settings.image_mobile -%}
{%- assign button_label_left = section.settings.button_label_left -%}
{%- assign button_label_right = section.settings.button_label_right -%}
