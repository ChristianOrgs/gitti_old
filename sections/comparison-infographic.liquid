        {
          "type": "richtext",
          "id": "description_left",
          "label": "Description left"
        },
        {
          "type": "text",
          "id": "button_label_left",
          "label": "Button label left"
        },
				{
					"type": "url",
					"id": "button_link_left",
					"label": "Button link left"
				},
