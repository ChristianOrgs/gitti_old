{%- assign description_left = section.settings.description_left -%}

<section class="row row-lg container-wrap section-comparison-infographic">
    <div class="comparison-infographic">
      <div class="infographic-columns">
        <div class="infographic-column-left">
          <h3 class="infographic-heading-left">{{headline_left}}</h3>
          <img src="{{ 'marker-right-desktop.png' | asset_url }}" loading="lazy" alt="" class="infographic-marker-desktop-left" />
          <img src="{{ 'marker-right-mobile.png' | asset_url }}" loading="lazy" alt="" class="infographic-marker-mobile-left" />
          <div class="infographic-description-left">{{description_left}}</div>
          <a href="{{ button_link_left.url }}" class="infographic-button hollow infographic-button-left">{{button_label_left}}</a>
          </div>
        <div class="infographic-column-right">
          <div class="infographic-new-badge">Neu</div>
          <h3 class="infographic-heading-right">{{headline_right}}</h3>
          <img src="{{ 'marker-left-desktop.png' | asset_url }}" loading="lazy" alt="" class="infographic-marker-desktop-right" />
          <img src="{{ 'marker-left-mobile.png' | asset_url }}" loading="lazy" alt="" class="infographic-marker-mobile-right" />
          <div class="infographic-description-right">{{description_right}}</div>
          <a href="{{ button_link_right.url }}" class="infographic-button black infographic-button-right">{{button_label_right}}</a>
        </div>
      </div>
    </div>
</section>

