{% comment %} FAQ Template New {% endcomment %}

<div class = "spacing-top-{{section.settings.spacing_top_section}} spacing-bottom-{{section.settings.spacing_bottom_section}}" data-section-id="{{ section.id }}" data-section-type="faq-template">
    {% unless section.settings.hide_title %}
    <div class="page-title">
        <{{section.settings.tag_title}} class = "{{section.settings.class_title}} {{section.settings.weight_class_title}} spacing-bottom-{{section.settings.spacing_bottom_title}}">{{ section.settings.main_title }}</{{section.settings.tag_title}}>
    </div>
    {% endunless %}
    
    {% unless page.content == blank %}
      <div class="text-content">
          {{ page.content }}
      </div>
    {% endunless %}
    
    {% assign heading = section.settings.title %}
    {% assign subheading = section.settings.subheading %}
    {% assign is_faq_template = true %}
       
    {% render 'faq_page_template', heading: heading, subheading: subheading, section: section, is_faq_template: is_faq_template, text: section.settings.text %}
    
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", hangEventhandlerOnElementClick('#shopify-section-{{section.id}} .page-title', 'page_press_section', 'page_press_downloads_section'));
 
    function changeSection(thisSection, newSection){
        
      if(document.querySelectorAll('#shopify-template-{{template.name}}').length != 0)
      {
          
            if (document.querySelectorAll('#shopify-template-{{template.name}} .' + thisSection + '.visible').length != 0)
            {
                document.querySelectorAll('#shopify-template-{{template.name}} .' + thisSection + '.visible')[0].classList.remove('visible');
                document.querySelectorAll('#shopify-template-{{template.name}} .' + newSection)[0].classList.add('visible');
            }
      }
    
    }
    function hangEventhandlerOnElementClick(target, newSection, thisSection){
        
        document.querySelectorAll(target)[0].addEventListener("click", function(event) {changeSection(thisSection, newSection)});
        
    }
</script>
<style>
    #shopify-section-{{section.id}} .clever_icon { 
    display: inline;
    cursor: pointer;
    }
    #shopify-section-{{section.id}} .page-title { 
    cursor: pointer;
    }
</style>
