
 <div id='desktop' class="grid  col-6 small_col-1  small_row-gap spacing-bottom-{{section.settings.desktop_spacing_bottom}} spacing-top-{{section.settings.desktop_spacing_top}}  page-width">

    <div class="text grid-item col-span-2   ">
     {% if section.settings.preheading != blank %}
         <{{section.settings.preheading_tag}} class="preheading text-align-{{section.settings.text_align}} spacing-bottom-{{section.settings.preheading_spacing_bottom}} {{section.settings.preheading_weight_class}} {{section.settings.preheading_class}}">{{ section.settings.preheading | escape }}</{{section.settings.preheading_tag}}>
       {% endif %}
       {% if section.settings.heading != blank %}
         <{{section.settings.heading_tag}}  class="heading spacing-bottom-{{section.settings.spacing_bottom_heading}} text-align-{{section.settings.text_align}} {{section.settings.heading_weight_class}} {{section.settings.heading_class}}">{{ section.settings.heading | escape }}</{{section.settings.heading_tag}}>
       {% endif %}
       {% if section.settings.text != blank %}
         <{{section.settings.text_tag}} class="text text-align-{{section.settings.text_align}} spacing-bottom-{{section.settings.text_spacing_bottom}} {{section.settings.text_weight_class}} {{section.settings.text_class}}">{{ section.settings.text | remove: '<p>' | remove: '</p>' }}</{{section.settings.text_tag}}>
       {% endif %}
       <div class='button'>
         {% if section.settings.button_label != blank and section.settings.button_link != blank %}
         <a href="{{section.settings.button_link}}" class="{{section.settings.button_class}}">{{section.settings.button_label}}</a>
       {% endif %}
 
       </div>
 
     </div>
     <div class='grid-item col-span-4 ' >
       {% if section.settings.video_url != nil %}
 
         <video class='video'   autoplay="true"   {% if section.settings.video_controls %} controls {% endif %}  loop playsinline muted="muted" >
         <source src="{{section.settings.video_url}}" type="video/mp4" />
       Your browser does not support our video.
         </video>
       <div style='display: none;'class="play-button is-absolute">&#9658</div>
 
 
       {% endif %} 
     </div>
 
 
  </div>
 
 {% if section.settings.video_url != nil %}
 
