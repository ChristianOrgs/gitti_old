<!-- sections/header_gitti.liquid -->

<style>
    :root{
        --overlay-color: #000;
    }
    #shopify-section-{{section.id}}  #logo{
        padding-top:12px;
        padding-bottom:12px;
    }

    @media only screen and (max-width: {{settings.breakpoint_small}}px) { 
        #shopify-section-{{section.id}}  #logo{
            padding-top:10px;
            padding-bottom:10px;
        }
    
    }

	#shopify-section-{{section.id}} .main_nav .main_nav_item_link.sale_link, 
	#shopify-section-{{section.id}} .mobile_mega_menu .main_nav_item_link.sale_link{
	color: #d16262;
    }

    #logo > a {
    width: 133px;
    display: flex;
    }

    #shopify-section-{{section.id}} .clever_icon.icon-gitti {
    max-width: 0;
    }

    #shopify-section-{{section.id}} .cart_bubble {
    transform: translate(50%, -50%);
    }

    #shopify-section-{{section.id}} .search_bar_input {
    border: none;
    border-radius: 0;
    }

    {% comment %} #shopify-section-{{section.id}} .search_bar_input,
    #header_icons {
        border-left: 1px solid var(--overlay-color);
    } {% endcomment %}
    header {
        position: relative;
        left: 0;
        width: 100%;
        background-color: #fff;
        border-bottom: 1px solid #000;
        z-index: 1000;
    }

    header.fixed {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        animation-name: header_fade_in;
        animation-duration: 0.3s;
        background-color: #fff;
    }
    {% if request.page_type == 'index' %}
        header{
            position: absolute;
            background-color:transparent;
            backdrop-filter: blur({{section.settings.blur}}px);
            -webkit-backdrop-filter: blur({{section.settings.blur}}px);
            border-bottom: 1px solid var(--overlay-color);
            transition: background-color 0.3s, color 0.3s; 
        }
        header.mega-menu-open{
            background-color: #fff;
        }
        #shopify-section-{{section.id}} svg,
        #shopify-section-{{section.id}} .main_nav_item > a,
        #shopify-section-{{section.id}} #locale p {
            color: var(--overlay-color);
        }
        header.fixed #shopify-section-{{section.id}} svg,
        header.fixed #shopify-section-{{section.id}} .main_nav_item > a,
        header.fixed #shopify-section-{{section.id}} #locale p,
        header.mega-menu-open #shopify-section-{{section.id}} svg,
        header.mega-menu-open #shopify-section-{{section.id}} .main_nav_item > a,
        #shopify-section-{{section.id}} .mobile_submenu .main_nav_item > a,
        header.mega-menu-open #shopify-section-{{section.id}} #locale p{
            color: #000;
        }
    {% endif %}
    
    #shopify-section-{{section.id}} #locale p {
        padding-top: 3px;
        cursor: pointer;
    }

    @keyframes header_fade_in {
    from {
    transform: translateY(-100%);
    }
    to {
    transform: translateY(0%);
    }
    }

    #search_bar {
    left: 0;
    top: 0;
    pointer-events: none;
    opacity: 0;
    background-color: #fff;
    transition: opacity 0.3s;
    }

    #search_bar.active,
    #search_results.active {
    pointer-events: all;
    opacity: 1;
    }

    #search_results {
    z-index: 3;
    left: 0;
    bottom: 0;
    transform: translateY(99%);
    transition: opacity 0.3s;
    pointer-events: none;
    opacity: 0;
    width: 100%;
    background-color: #fff;
    border-top: 1px solid #E8E8E8;
    border-bottom: 1px solid #E8E8E8;
    overflow: auto;
    }

    #shopify-section-{{section.id}} .main_nav_item_mega_menu {
    z-index: 2;
    bottom: 0;
    left: 0;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
    transform: translateY(99%);
    width: 100%;

    min-height: 360px;
    background-color: white;
    border-top: 1px solid #E8E8E8;
    border-bottom: 1px solid #E8E8E8;
    }

    #shopify-section-{{section.id}} .main_nav_item:hover > .main_nav_item_mega_menu {
        opacity: 1;
        pointer-events: all;
    }

    #shopify-section-{{section.id}} .main_nav_item.has-mega-menu.mega-menu-open > .main_nav_item_mega_menu {
        opacity: 1;
        pointer-events: all;
    }

    #shopify-section-{{section.id}} .main_nav .main_nav_item_link, #shopify-section-{{section.id}} #header_tools #account p, #shopify-section-{{section.id}} #header_tools #locale p, #shopify-section-{{section.id}} #header_tools #search p{
        font-size: 13px;
    }

    #shopify-section-{{section.id}} .mega_menu_block_item_link:hover, #shopify-section-{{section.id}} .main_nav .main_nav_item_link:hover{
        font-weight: bold
    }

    #shopify-section-{{section.id}} .mega_menu_block_overlay {
    left: 0;
    top: 0;
    }

    #shopify-section-{{section.id}} .custom_header_grid {
        grid-template-columns: 1fr 133px  1fr;
    }

    #shopify-section-{{section.id}} .custom_mega_menu_grid {
        grid-template-columns: 133px auto 133px;
    }

    #shopify-section-{{section.id}} .no_results:not(.active) {
        display: none;
    }

    #shopify-section-{{section.id}} #menu_icon:not(.active) .icon-close {
     display: none;
    }

    #shopify-section-{{section.id}} #menu_icon.active .icon-menu {
        display: none;  
    }

    #menu_drawer {
        position: fixed;
        left: 0;
        top: 0;
        height: 100vh;
        width: 100vw;
        transition: opacity 0.3s;
        opacity: 0;
        pointer-events: none;
        z-index: 999;
    }

    #menu_drawer.active {
        opacity: 1;
        pointer-events: all;
    }

    #menu_drawer .mobile_mega_menu {
        background: #ffffff;
        width: 100%;
        max-width: 270px;
        height: 100%;
    }

    #shopify-section-{{section.id}} .mobile_locales_account {
        width: 100%;
        border-top: 1px solid #E8E8E8;
    }

    #locale_mobile {
        border-right: 1px solid #E8E8E8;
    }

    #menu_drawer .mobile_mega_menu_background {
        background: #333333;
        opacity: 0.75;
        width: 100%;
        height: 100%;
    }

    #shopify-section-{{section.id}} .mobile_submenu_back {
        border-bottom: 1px solid #E8E8E8;
    }

    #shopify-section-{{section.id}} .mobile_mega_menu_background {
        position: fixed;
        left: 0;
        top: 0;
        height: 100vh;
        width: 100vw;
        z-index: 1;
    }

    #shopify-section-{{section.id}} .mobile_mega_menu {
        position: relative;
        z-index: 2;
    }

    #shopify-section-{{section.id}} .mobile_submenu {
        top: 0;
        right: 0;
        transform: translateX(100%);
        background-color: #fff;
        transition: transform 0.3s;
    }

    #shopify-section-{{section.id}} .submenu_toggle:checked ~ .mobile_submenu {
        transform: translateX(0%);
    }

    #shopify-section-{{section.id}} .mobile_menus {
        overflow: hidden;
    }

    #shopify-section-{{section.id}} .clever_icon, #shopify-section-{{section.id}} .clever_icon svg {
        width: auto;
        max-width: 15px;
        min-width: 15px;
    }

    #secondary_nav_mobil,
    #main_nav_mobile {
        width: 100%;
    }

    @media only screen and (min-width: {{settings.breakpoint_medium | plus: 1 }}px) {
        #shopify-section-{{section.id}} .custom_grid_gap {
            grid-gap: 30px;
        }
    }

    @media only screen and (max-width: {{settings.breakpoint_medium}}px) {
        #shopify-section-{{section.id}} .custom_header_grid {
            grid-template-columns: 1fr auto 1fr;
        }

        #shopify-section-{{section.id}} #header_icons {
            border-left: none;
        }
    }

    #shopify-section-{{ section.id }} #countries,
    #shopify-section-{{ section.id }} #mobile_countries {
        cursor: pointer;
    }

    #shopify-section-{{ section.id }} #countries select,
    #shopify-section-{{ section.id }} #mobile_countries select {
      width: 100%;
      min-width: 235px;
      border-radius: unset;
	  border: solid black 1px;
	  padding-left: 10px;
    }

    #shopify-section-{{ section.id }} #countries div:nth-child(2),
    #shopify-section-{{ section.id }} #mobile_countries div:nth-child(2) {
      padding-top: unset;
    }

    #shopify-section-{{ section.id }} #countries.active  {
    position: absolute;
    display: flex;
    visibility: unset;
    top: 66px;
    z-index: 200;
    background-color: #fff;
    flex-direction: column;
    }

    #shopify-section-{{ section.id }} #mobile_countries.active {
    position: absolute;
    display: flex;
    visibility: unset;
    bottom: 66px;
    z-index: 200;
    background-color: #fff;
    flex-direction: column;
    }

    .clever_icon.icon-globe, .clever_icon.icon-globe svg {
    cursor: pointer;
    min-width: 15px;
    }

    @media screen and (-webkit-min-device-pixel-ratio: 0) {
    select[name="country"]:focus {
    font-size: 16px;
    }
    }

    .no-zoom {
    font-size: 16px;
    transform-origin: top left;
    transform: scale(0.875);
    padding: 4.57px;       
    }

    #shopify-section-{{ section.id }} select[name="country"],
    #shopify-section-{{ section.id }} select[name="language"]{
    height: 35px;
    }

    #shopify-section-{{ section.id }} #countries div p,
    #shopify-section-{{ section.id }} #mobile_countries div p {
    padding-bottom: 5px;
	font-size: 14px;
    }

    #shopify-section-{{section.id}} .level_1_text {
        font-size: {{section.settings.first_level_size_text}}px;
    }

    #shopify-section-{{section.id}} .level_2_title {
        font-size: {{section.settings.second_level_size_text_title}}px;
    }

    #shopify-section-{{section.id}} .level_2_text {
        font-size: {{section.settings.second_level_size_text}}px;
    }

    #shopify-section-{{section.id}} .level_1_text.has_level_2_menu {
        max-width: calc(100% - 50px);
        min-width: max-content;
    }

    #shopify-section-{{section.id}} .submenu_open_icon.container {
        width: 100%;
        height: 100%;
    }

    .localization_form_wrapper {
        position: fixed;
        background: #222222b5;
        padding: 20px;
        width: 100%;
        height: 100%;
        z-index: 999;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    form#localization_form {
        width: 400px;
        background: #fff;
        padding: 20px;
    }
</style>

