<div class="is-relative">
    <div class="section-spacing-side grid grid-gap custom_header_grid custom_grid_gap">
        <div id="header_tools_mobile" class="flex row left middle only_medium-down">
            <div class="flex row spacing-right-xs">
                <div id="menu_icon" class="spacing-xs" data-menu-toggle>
                    {% render 'icon', icon: 'menu' %}
                    {% render 'icon', icon: 'close' %}
                </div>
            </div>
            <a href="{{ routes.search_url }}" id="search" class="flex row middle spacing-xs"  data-search-toggle>
                {% render 'icon', icon: 'search' %}
            </a>
        </div>

        <div id="nav" class="only_large">
            <nav class="">
                {% assign main_nav = linklists[section.settings.main_nav] %}
                <!-- maninnav{{ main_nav }} -->
                <!-- maninnav{{ main_nav }} -->
                <ul class="main_nav flex row left middle">
                {% for link in main_nav.links %}
                    {% liquid
                        assign link_add_class = ""
                        if link.url contains "sale" or link.url contains "conscious-gift-guide"
                            assign link_add_class = "sale_link"
                        endif
                    %}
                    {% assign block_count = 0 %}
                    {% for block in section.blocks %}
                        {% if block.settings.menu_item == link.title %}
                            {% assign block_count = block_count | plus: 1 %}
                        {% endif %}
                    {% endfor %}
                    <li class="main_nav_item flex {% if block_count != 0 %} has-mega-menu{% endif %}">
                        <a href="{{link.url}}" class="note container spacing-top-m spacing-bottom-m {% unless forloop.last %}spacing-right-m{% endunless %}  main_nav_item_link {% if link.active %}active{% endif %} {{ link_add_class }}">
                            {{link.title}}
                        </a>
                        
                        {% if block_count != 0 %}
                            <div class="main_nav_item_mega_menu is-absolute">
                                <div class="page-width spacing-top-l spacing-bottom-l grid grid-gap custom_mega_menu_grid">
                                    <div class="grid-item col-start-2 grid col-4 grid-gap">
                                        {% for block in section.blocks %}
                                            {% if block.settings.menu_item == link.title %}
                                                {% case block.type %}
                                                    {% when 'menu' %}
                                                        {% assign block_menu = linklists[block.settings.menu] %}
                                                        <div id="mega_menu_block-{{block.id}}" class="grid-item mega_menu_block" >
                                                            <ul class="flex col left">
                                                                {% for link in block_menu.links %}
                                                                    <li class="mega_menu_block_item spacing-bottom-m">
                                                                        <a href="{{link.url}}" class="note  mega_menu_block_item_link {% if link.active %}active{% endif %}">
                                                                            {{link.title}}
                                                                        </a>
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>
                                                        </div>
                                                    {% when 'promotion' %}
                                                        <div id="mega_menu_block-{{block.id}}" class="mega_menu_block grid-item col-span-2" >
                                                            <a href="{{block.settings.link}}" class="flex is-relative">
                                                                {% render 'image_element', image: block.settings.image, image_shape: 'sixteen_by_nine', fit: 'cover' %}
                                                                <div class="mega_menu_block_overlay is-absolute container flex col middle left spacing-m">
                                                                    <{{block.settings.preheading_tag}} class="{{block.settings.preheading_class}} {{block.settings.preheading_weight_class}} spacing-bottom-xs"> {{block.settings.preheading}} </{{block.settings.preheading_tag}}>
                                                                    <{{block.settings.heading_tag}} class="{{block.settings.heading_class}} {{block.settings.heading_weight_class}}"> {{block.settings.heading}} </{{block.settings.heading_tag}}>
                                                                </div>
                                                            </a>
                                                            
                                                        </div>
                                                    {% when 'placeholder' %}
                                                    <div class="grid-item">

                                                    </div>
                                                {% endcase %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>  
                        {% endif %}
                    </li>
                {% endfor %}    
                </ul>
            </nav>
        </div>
        <div id="logo" class="spacing-top-s spacing-bottom-s container flex col left medium-down_col medium-down_center">
            <a href="{{routes.root_url}}" class="container flex col center middle medium-down_col medium-down_center">
                {% render 'icon', icon: 'gitti' %}
            </a>
        </div>
        <div id="header_tools" class="flex row right middle medium-down_row medium-down_right">
            <div id="locale" class="flex row middle spacing-right-s spacing-top-s spacing-bottom-s only_large">
                {% render 'icon', icon: 'globe' %}
              <p data-iso="" class="note spacing-left-xs"></p>
            </div>
            <div id="countries" class="hidden">
              <div class="row middle spacing-s only_large">
                <p>Dein Standort</p>
                <select name="country" onchange="getCountry(event)">
                </select>
              </div>

                <div class="row middle spacing-s large_down">
                    <p>Deine Sprache</p>
                    <select name="language" onchange="setLanguage(event)"></select>
                </div>
            </div>
            <a href="{{ routes.search_url }}" id="search" class="flex row middle spacing-right-s spacing-top-s spacing-bottom-s only_large"  data-search-toggle>
                {% render 'icon', icon: 'search' %} 
                {% comment %} <p class="note spacing-left-xs">{{'general.search.search' | t }}</p> {% endcomment %}
            </a>
          {% if customer %}
              <a href="{{ routes.account_url }}" id="account" class="flex row middle spacing-right-s spacing-top-s spacing-bottom-s only_large">
                  {% render 'icon', icon: 'customer' %}
              </a>
          {% else %}
              <a href="{{ routes.account_login_url }}" id="account" class="flex row middle spacing-right-s spacing-top-s spacing-bottom-s only_large">
                  {% render 'icon', icon: 'customer' %}
              </a>
          {% endif %}


            <div id="header_icons" class="flex row right middle">
                <div class="wishlist_placeholder only_small" style="width:32px;"></div>
                <a href="{{routes.cart_url}}" id="cart_icon" class="flex ">
                    <div class="container spacing-top-s spacing-bottom-s flex is-relative">
                       {% render 'icon', icon: 'cart' %} 
                       <div class="is-absolute cart_bubble">
                        {% if cart.item_count > 0 %}
                            {% assign cart_count = 0 %}
                            {% for item in cart.items %}
                                {% if item.properties.set_id == blank %}
                                    {% assign cart_count = cart_count | plus: item.quantity %}
                                {% endif %}
                            {% endfor %}
                            {% render 'icon', icon: 'bubble_small', count: cart_count %}
                        {% endif %}
                       </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div id="search_bar" class="is-absolute container">
        <div class="page-width container">
            <div class="flex row between middle container">
                <div class="container spacing-top-s spacing-bottom-s">
                    {% render 'search_bar', type:'product' %}
                </div>
                <div class="" data-search-toggle >{% render 'icon', icon:'close' %}</div>
            </div>
        </div>
        
    </div>
    <div id="search_results" class="is-absolute">
        <div class="page-width spacing-top-l spacing-bottom-l container">
           <div class="grid col-4 small_col-1 grid-gap">
               <div class="grid-item col-span-4 flex row no_results">
                   <p class="note">{{'general.search.no_results' | t }}</p><p class="note bold">&nbsp;"</p><p class="note bold search_term"></p><p class="note bold">"&nbsp;</p><p class="note">{{'general.search.no_results_2' | t }}</p>
               </div>
               <div class="grid-item">
                    <ul class="flex col left">
                        {% assign search_collection = collections[section.settings.search_collection] %}
                        <li class="spacing-bottom-s"><a href="{{search_collection.url}}" class="note" >{{search_collection.title}}</a></li>
                        {% for product in search_collection.products %}
                            <li class="spacing-bottom-s"><a href="{{product.url}}" class="note bold">{{product.title}}</a></li>
                        {% endfor %}    
                    </ul>
                   
               </div>
               {% render 'predictive_search', searchFor:'product', limit:3, unavailableProducts:'hide' %}
           </div>
        </div>
    </div> 
    <div id="menu_drawer" >
        <div class="mobile_mega_menu flex col left between">
