            if(window.innerWidth > {{settings.breakpoint_medium}})
                document.querySelector('header').classList.add('mega-menu-open')
        })
        document.querySelector('header').addEventListener('mouseleave',()=>{
            setTimeout(()=>{
                if(window.innerWidth > {{settings.breakpoint_medium}} && !enter_announcement_bar)
                    document.querySelector('header').classList.remove('mega-menu-open')
            },100)
        })
        function setMaxHeightMenuDrawer() {
          var menuDrawer = document.querySelector('#menu_drawer');
          menuDrawer.style.maxHeight = window.innerHeight + 'px';
        }

    var currentCountry_mobile = document.querySelector('#mobile_countries [name="country"]').value ?? null,
        globe_mobile = document.querySelector('#locale_mobile'),
        currentCountry = document.querySelector('#countries [name="country"]').value ?? null,
        globe = document.querySelector('#locale');

        function generateOptions() {

          function CreateAndAppendOption ( data, isoCode, mobileSelector, desktopSelector, languageSelector, flag = false ){
            var option = document.createElement('option');
            option.value = data,
            option.dataset.isocode = isoCode,
              option.innerText = !!flag ? (flag + ' ' + data) : data;
            if (languageSelector && "{{ localization.language.iso_code }}" !== "") {
                option.checked = isoCode === '{{ localization.language.iso_code }}';
                option.selected = isoCode === '{{ localization.language.iso_code }}';
                if (option.selected) {
                    option.setAttribute('selected', 'selected');
                }
            }
            var optionCopy = option.cloneNode(true);

            document.querySelector( mobileSelector ).appendChild( option ),
            document.querySelector( desktopSelector ).appendChild( optionCopy )
          }

          Object.keys( window.isoCountries ).forEach(function( country ){
            CreateAndAppendOption(country, window.isoCountries[ country ], '#mobile_countries [name="country"]', '#countries [name="country"]', false, window.isoCountriesFlags[ window.isoCountries[ country ] ] )
          });

          Object.keys( window.isoLanguages ).forEach(function( language ){
            CreateAndAppendOption( language, window.isoLanguages[ language ], '#mobile_countries [name="language"]', '#countries [name="language"]', true )
          })
        }

        function setIsoCode (currentCountry, isoCode = undefined ) {
          document.querySelectorAll('[data-iso=""]').forEach(function( p ){
            var iso = isoCode ?? window.isoCountries[currentCountry];

            currentCountry = currentCountry === null ? Object.keys(window.isoCountries).filter( country => window.isoCountries[ country ] === isoCode ) : currentCountry;

            if (p.innerText !== iso) {
                p.innerText = (iso + ' / ' + ("{{ localization.language.iso_code }}").toUpperCase()),
                    document.querySelector('#countries').classList.remove('active'),
                    document.querySelector('#mobile_countries').classList.toggle('active'),
                    document.querySelector('#mobile_countries').classList.remove('active'){% comment %},
                    sessionStorage.isoCode = iso{% endcomment %}
            }

            document.querySelector('#mobile_countries [name="country"]').value = currentCountry;
            document.querySelector('#countries [name="country"]').value = currentCountry
          })
        }

        function getCountry ( event ){
          var country = event.target.value;

          if(country === 'Netherlands' || country === 'Belgium' || country === 'Czech Republic' || country === 'Denmark' || country === 'France' || country === 'Hungary' || country === 'Italy' || country === 'Liechtenstein' || country === 'Luxembourg' || country === 'Monaco' || country === 'Portugal' || country === 'Spain' ){
            window.location = 'https://www.gitticonsciousbeauty.com/';
        }

        setIsoCode(country)

        if (typeof event.target.querySelector("option:checked").dataset.isocode != 'undefined') {
            let iso_code_selected = event.target.querySelector("option:checked").dataset.isocode;
            if (document.querySelector(`#localization_form button[name="country_code"][value='${iso_code_selected}']`) != null) {
                document.querySelector(`#localization_form button[name="country_code"][value='${iso_code_selected}']`).click();
            }
        }
        }

    function setLanguage(event) {
        if (event === undefined) return;

        var isoCode = !!event.target ? event.target.childNodes[event.target.selectedIndex].dataset.isocode : event;

        if (isoCode !== '{{ localization.language.iso_code }}' && document.querySelector(`#localization_form button[name="locale_code"][value='${isoCode}']`) != null) {
            {% comment %}sessionStorage.language = isoCode;{% endcomment %}
            document.querySelector(`#localization_form button[name="locale_code"][value='${isoCode}']`).click();
        }

        return false;

        //TODO: Will this be necessary?
        var isoCode = !!event.target ? event.target.childNodes[event.target.selectedIndex].dataset.isocode : event;
        var path = window.location.pathname.replace(RegExp('^\/'), '')
        var new_path;

            Object.keys( window.isoLanguages ).forEach(function( language ){
                new_path = path.replace( new RegExp(`(^${ window.isoLanguages[ language ] }\/{0,1})`), '' );
            })

            if ( isoCode !== 'de' ) {
                new_path = '/' + isoCode + ( new_path !== '' ? '/' + new_path : '' ) ;
            } else {
                new_path = '/' + new_path;
            }

            sessionStorage.language = isoCode;
            var newLocation = window.location.protocol + '//' + window.location.host + new_path + window.location.search;

            if ( ('/' + path) !== new_path ) {
                console.log( 'newLocation', newLocation );
                window.location = newLocation;
            }
        }


        document.addEventListener('DOMContentLoaded', function(){
