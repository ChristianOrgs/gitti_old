{% comment %} FAQ Template New {% endcomment %}

<div class = "page-width spacing-top-{{section.settings.spacing_top_section}} spacing-bottom-{{section.settings.spacing_bottom_section}}" data-section-id="{{ section.id }}" data-section-type="faq-template">
    {% unless section.settings.hide_title %}
    <div class="page-title">
        <{{section.settings.tag_title}} class = "{{section.settings.class_title}} {{section.settings.weight_class_title}} spacing-bottom-{{section.settings.spacing_bottom_title}}">{{ page.title }}</{{section.settings.tag_title}}>
    </div>
    {% endunless %}
    
    {% unless page.content == blank %}
      <div class="text-content">
          {{ page.content }}
      </div>
    {% endunless %}
    
    {% assign heading = section.settings.title %}
    {% assign subheading = section.settings.subheading %}
    {% assign is_faq_template = true %}
       
    {% render 'faq_template' %}
    
  </div>
  
