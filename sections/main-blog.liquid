
<div class="page-width section-spacing">

    {% paginate blog.articles by 5 %}
    
    <h1 class="h1 spacing-bottom-m">{{ blog.title }}</h1>
    {% for article in blog.articles %}
      <div>
        <h2 class="h2 spacing-bottom-s"><a href="{{ article.url }}">{{ article.title }}</a></h2>
        <p class="spacing-bottom-s">{{ article.author }} @ {{ article.created_at }}</p>
        <div>
          {% if article.excerpt.size > 0 %}
            {{ article.excerpt }}
          {% else %}
            <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    
    {% if paginate.pages > 1 %}
      {{ paginate | default_pagination }}
    {% endif %}
    
    {% endpaginate %}
    
    </div>
    