{% comment %} Settings {% endcomment %}
{% assign image_gallery = section.settings.image_gallery %}
{% assign image_size = section.settings.image_size %}
{% assign add_cart_position = section.settings.add_cart_position %}

{% assign zoom = false %}
{%- if image_gallery == 'zoom' -%}
	{% assign zoom = true %}
{%- endif -%}
{% assign arrows = true %}
{% assign dots = section.settings.product_slideshow_dots %}
{% assign layout = 4 %}
{% assign tab_1 = section.settings.page_tab_1 %}
{% assign tab_2 = section.settings.page_tab_2 %}
{% assign tab_3 = section.settings.page_tab_3 %}
{% assign product_layout = section.settings.product_layout %}
{% assign color_swatches = section.settings.color_swatches %}
{% assign show_reviews = settings.show_reviews %}
{% assign preorder = product.metafields.custom_fields["preorder"] %}

{% assign sold_out = true %}
{% unless product.tags contains 'ausverkauft' %}
	{% if product.available %}
		{% assign sold_out = false %}
	{% endif %}
{% endunless %}

<!-- Mustache Templates for rendering variant popover -->
<div data-section-id="{{ section.id }}" data-section-type="product-template">
	<section class="product container-wrap js-product-template clearfix row row-lg js-product-template--{{section.id}} product-layout--{{ product_layout }}" data-show_reviews="{{ show_reviews }}">
		<div class="container">
			<div class="row">
				<div class="breadcrumbs block">
					{% if settings.show_breadcrumbs %}
					{% include 'site-breadcrumbs' %}
					{% endif %}
				</div>
			</div>

			<div class="row row--{{ product_layout }} js-row--{{ product_layout }}">
				<div class="product-layout-{{ layout }}--images product-layout-images product-layout-images--{{ image_size }} xxl_s12 xl_s12 lg_s12 s1">
					{% comment %} Set the layout for the variant images {% endcomment %}
					{% for image in product.images %}
						{% if forloop.length <= 2 %}
								{% assign thumbnail_width = 'product-image--100' %}
						{% elsif forloop.length == 3 %}
							{% assign thumbnail_width = 'product-image--50' %}
						{% elsif forloop.length == 4 %}
							{% assign thumbnail_width = 'product-image--33' %}
						{% else %}
							{% assign thumbnail_width = 'product-image--25' %}
						{% endif %}
						{% assign length = forloop.length %}
					{% endfor %}
					{% if product_layout == 'slideshow' %}
					<div class="productImgSlider js-productImgSlider js-productImgContainer"
						style="padding-right:20px;"
						data-gallery="{{ image_gallery }}"
						data-dots="{{ dots }}"
						data-arrows="{{ arrows }}"
						data-zoom="{{ zoom }}"
						id="js-productImgSlider--{{ section.id }}">

						{% for image in product.images %}

							{% assign has_video = false %}
							{% assign image_alt = image.alt | escape %}

							{% if image_alt contains 'youtube' %}
								{% assign has_video = true %}
								{% assign video_type = 'youtube' %}
							{% elsif image_alt contains 'vimeo' %}
								{% assign has_video = true %}
								{% assign video_type = 'vimeo' %}
							{% endif %}

							<div class="js-slide {{ thumbnail_width }} product-image product-image--fit {% if forloop.length == 1 %}product-image--single{% endif %} lazyload fade-in"
								data-image="{{ image | product_img_url: 'master'}}"
								data-zoom-image="{{ image | product_img_url: 'master'}}"
								data-id="{{ image.id }}"
								data-bgset="{% include 'bgset', image: image %}"
								data-sizes="auto"
								data-parent-fit="contain"
								data-aspect-ratio="{{ image.aspect_ratio }}">

								<noscript>
									<div class="product-image--no-js" style="background: url({{ image | img_url: '2048x' }}) no-repeat center center; background-size: contain;"></div>
								</noscript>

								{%- if has_video -%}
									<div class="product-image__video">
										<a href="{{ image_alt }}" class="js-video"><span class="icon-play"></span></a>
									</div>
								{%- else -%}

									{%- if image_gallery == 'lightbox' -%}
										<a href="{{ image | product_img_url: 'master'}}" rel="lightbox" class="product-image-lightbox"></a>
									{%- endif -%}

									{%- if image_gallery == 'zoom' -%}
										<div class="zoom-container"></div>
									{%- endif -%}
								{%- endif -%}
							</div>
						{% endfor %}
					</div>
				{% elsif  product_layout == 'slideshow-nav' %}
					{% if product.images.size > 1 %}
						<div  style="display: flex;flex-direction: row-reverse;max-height: 600px;">
					{% endif %}
						<div class="productImgSlider js-productImgSlider js-productImgContainer" style="margin-right: 15px;" data-gallery="{{ image_gallery }}" data-fade="false" data-dots="{{ dots }}" data-arrows="true" data-zoom="{{ zoom }}" id="js-productImgSlider--{{ section.id }}">
							{% for image in product.images %}

								{% assign has_video = false %}
								{% assign image_alt = image.alt | escape %}

								{% if image_alt contains 'youtube' %}
									{% assign has_video = true %}
									{% assign video_type = 'youtube' %}
								{% elsif image_alt contains 'vimeo' %}
									{% assign has_video = true %}
									{% assign video_type = 'vimeo' %}
								{% endif %}

								<div class="js-slide product-image product-image--fit js-slide-fade {% if forloop.length == 1 %}product-image--single{% endif %} lazyload fade-in" data-zoom-image="{{ image | product_img_url: 'master'}}"  data-id="{{ image.id }}" data-bgset="{% include 'bgset', image: image %}" data-sizes="auto" data-parent-fit="cover" data-aspect-ratio="{{ image.aspect_ratio }}">
									<noscript>
										<div class="product-image--no-js" style="background: url({{ image | img_url: '1028x' }}) no-repeat center center; background-size: contain;"></div>
									</noscript>

									{%- if has_video -%}
										<div class="product-image__video">
											<a href="{{ image_alt }}" class="js-video"><span class="icon-play"></span></a>
										</div>
									{%- else -%}

										{%- if image_gallery == 'lightbox' -%}
											<a href="{{ image | product_img_url: 'master'}}" rel="lightbox" class="product-image-lightbox"></a>
										{%- endif -%}

										{%- if image_gallery == 'zoom' -%}
											<div class="zoom-container"></div>
										{%- endif -%}

									{%- endif -%}
								</div>
							{% endfor %}
						</div>

					{% if product.images.size > 1 %}
							<div class="product-navigation-bar">
								<div class="slide-wrapper">
								{% for image in product.images %}
									<div class="js-slide product-image-thumb lazyload fade-in  {% if forloop.index == 1 %}active{% endif %}"
									style="background: url({{ image | img_url: '180x' }});background-position: center; background-repeat: no-repeat; background-size: contain;"></div>
								{% endfor %}
								</div>
							</div>
							<script>
								$('.slide-wrapper').on('click','.js-slide', function(e){
									var index = $(e.currentTarget).index();
									$('.productImgSlider').flickity('select',index);
								})
							</script>
						</div>
					{% endif %}
				{% else %}
					<div class="productImgScroller js-productImgScroller js-productImgContainer"
						data-gallery="{{ image_gallery }}"
						data-dots="{{ dots }}"
						data-arrows="{{ arrows }}"
						data-zoom="{{ zoom }}">
						{% for image in product.images %}

							{% assign has_video = false %}
							{% assign image_alt = image.alt | escape %}

							{% if image_alt contains 'youtube' %}
								{% assign has_video = true %}
								{% assign video_type = 'youtube' %}
							{% elsif image_alt contains 'vimeo' %}
								{% assign has_video = true %}
								{% assign video_type = 'vimeo' %}
							{% endif %}

							<div class="js-slide {{ thumbnail_width }} product-image product-image--fit {% if forloop.length == 1 %}product-image--single{% endif %} lazyload fade-in {% if forloop.index == 1 %} active{% endif %}"
								{% unless has_video %}
									data-zoom-image="{{ image | product_img_url: 'master'}}"
								{% endunless %}
								data-image="{{ image | product_img_url: 'master'}}"
								data-aspect-ratio="{{ image.aspect_ratio }}"
								data-id="{{ image.id }}"
								data-bgset="{% include 'bgset', image: image %}"
								data-sizes="auto"
								data-parent-fit="contain"
								data-index="{{ forloop.index }}">
								<noscript>
									<div class="product-image--no-js" style="background: url({{ image | img_url: '2048x' }}) no-repeat center center; background-size: contain;"></div>
								</noscript>

								{%- if has_video -%}
									<div class="product-image__video">
										<a href="{{ image_alt }}" class="js-video"><span class="icon-play"></span></a>
									</div>
								{%- else -%}
									{%- if image_gallery == 'lightbox' -%}
										<a href="{{ image | product_img_url: 'master'}}" rel="lightbox" class="product-image-lightbox"></a>
									{%- endif -%}
									{%- if image_gallery == 'zoom' -%}
										<div class="zoom-container"></div>
									{%- endif -%}
								{%- endif -%}

							</div>
						{% endfor %}
					</div>

				{% endif %}
				</div>
				<!-- end product-images -->

				<div class="product-info js-product-info product-layout-{{ layout }}--info xxl_s12 xl_s12 lg_s12 s1">
					<div class="product-info__wrapper js-product-info__wrapper">
						<div class="block s1 product-title__wrapper">
							{%- if section.settings.show_vendor -%}
								<p class="product-vendor">{{ product.vendor }}</p>
							{%- endif -%}

							<h1 itemprop="name" class="product-title">{{ product.title }}</h1>

							<p>{{ product.metafields.custom_fields["subline_product"] }}</p>

							{% if show_reviews %}
								<span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
							{% endif %}

							{% if add_cart_position == 'bottom' %}
							<div class="product-container">
								<h4>{{ 'products.product_page.intro' | t }}:</h4>
								<div class="product-description">
									{{ product.description }}
								</div>
							</div>
							{% endif %}
						</div>
						<div class="product-info__teaser-wrapper">
							{% if section.settings.show_tag_section %}
								<div class="teaser-wrapper__tag-section">
									{% for tag in product.tags %}
										{% if tag contains 'neu' or tag contains 'bestseller' or tag contains 'favorite' or tag contains 'spare' or tag contains 'limitiert' %}
											{% if tag contains 'spare' %}
												{% assign tagMod = tag | replace: 'spare:', '' | money %}
												<span class="tag-section__tag">spare {{ tagMod }}</span>
											{% else %}
												<span class="tag-section__tag">{{tag}}</span>
											{% endif %}
										{% endif %}
									{% endfor %}
								</div>
							{% endif %}
							{% include 'product-price', on_sale: product.compare_at_price %}
							{% if product.metafields.custom_fields["short_description"] != blank %}
								<div class="teaser-wrapper__description">
									{{product.metafields.custom_fields["short_description"]}}
								</div>
							{% endif %}
							{% if product.metafields.custom_fields.prod_icons != blank %}
								{% assign icons = product.metafields.custom_fields.prod_icons | split: ',' %}
								<div class="product-icon__wrapper">
									{% for icon in icons %}
										<div class="product-icon__wrapper-icon" style="background-image: url({{icon}});">
										</div>
									{% endfor %}
								</div>
							{% endif %}
						</div>
						{% assign productIdentifier = product.id %}
						<div class="product-form block s1">
							{% form 'product', product, class:'productForm', data-color_swatches: color_swatches %}

								{{ form.errors | default_errors }}

								{% assign first_variant = product.selected_or_first_available_variant %}
								{% unless product.tags contains 'ausverkauft' %}
								{% if first_variant.available %}
									{% assign sold_out = false %}
								{% else %}
									{% assign sold_out = true %}
								{% endif %}
								{% endunless %}

								<div class="productForm-block productForm-block--options-inline {% if color_swatches == true %}productForm-block--swatches is-loading{% endif %}">

									<select id="product-select" name="id">
									{% for variant in product.variants %}
										<option{% if variant == first_variant %} selected{% endif %} value="{{ variant.id }}" data-sku="{{variant.sku}}" data-qty="{{ variant.inventory_quantity }}">
										{{ variant.title }} - {{ variant.price | money | strip_html }}
									</option>
									{% endfor %}
									</select>

									{% if product.variants.size > 1 and color_swatches == true %}
									 {% include 'swatch' with 'Color' %}
									{% endif %}

								</div>

								{% if product.tags contains 'box' %}
									<br/>
									<h4>Jetzt Wählen:</h4>
								{% endif %}

								<div class="wrapper-option-set">
									<div id="moodja_set_custom_options_{{ product.id }}"> </div>
								</div>

								<div class="productForm-block">
									<div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
										<meta itemprop="priceCurrency" content="{{ shop.currency }}">
										<link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">

										{% if section.settings.show_quantity %}
										<div class="productForm-select">
											<label for="quantity">{{ 'products.form.qty' | t }}</label>
											<select name="quantity" id="quantity">
												{% for i in (1..9) %}
													<option value="{{ i }}">{{ i }}</option>
												{% endfor %}
											</select>
											<span class="selectArrow"></span>
										</div>
										{% endif %}

										{% assign product_upsell = all_products[settings.upsell] %}

										{% if sold_out == true and settings.show_notify_btn %}
											<div class="product-form-submit__wrapper">
												<button class="js-notify-popup button add-to-cart-btn-style" type="button" name="checkout" onclick="pintrk('track', 'addtocart', { product_price: {{ product.price | divided_by: 100.0 | round: 2 }}, product_name: '{{ product.title }}' });" data-handle="{{product.handle}}" data-variant="{{variantIdentifier}}" data-id="{{product.id}}">{{ settings.notify_btn_text }}</button>
											</div>
										{% else %}
											<div class="product-form-submit__wrapper">
												<button class="productForm-submit js-productForm-submit add-to-cart-btn-style {% if product_upsell.id == product.id or product.tags contains 'no-upsell'%} js-no-popup{% endif %}" type="submit" name="checkout" onclick="pintrk('track', 'addtocart', { product_price: {{ product.price | divided_by: 100.0 | round: 2 }}, product_name: '{{ product.title }}' });" data-handle="{{product.handle}}" data-id="{{product.id}}">{% if preorder != 0 %} {{ 'products.form.submitpreorder' | t }} {% else %} {{ 'products.form.submit' | t }} {% endif %} {% if product.variants.size <= 1 %}{% endif %}{% else %}{{ 'products.form.sold_out' | t }}</button>
											</div>
										{% endif %}
										{% if template contains 'product' %}
											{% if section.settings.enable_payment_button %}
												{{ form | payment_button }}
											{% endif %}
										{% endif %}
									</div>
								</div>
								<div class="product-small-info">
									{% if product.metafields.custom_fields["delivery_time"] != blank %}
										<small>{% include 'icon-delivery' %} {{ product.metafields.custom_fields["delivery_time"] }}</small>
									{% endif %}
								</div>
							{% endform %}
							{% if section.settings.show_newsletter and sold_out %}
								{% form 'customer' %}
									{% assign text_newsletter = section.settings.text_newsletter %}
									{% if text_newsletter != blank %}
										<label for="contact[email]">{{ text_newsletter }}</label>
									{% endif %}
									<div class="js-signUp-form signUp-form">
										<input type="hidden" id="contact_tags" name="contact[tags]" value="newsletter"/>
										<div class="inputGroup mc-field-group">
											<input class="signUp-input required email" type="email" value="" name="contact[email]" id="contact[email]" placeholder="{{ 'general.newsletter_signup.email_placeholder' | t }}">
											<input type="hidden" id="newsletter-first-name" name="contact[first_name]" value="Newsletter" />
											<input type="hidden" id="newsletter-last-name" name="contact[last_name]" value="Subscriber" />
											<span class="signUp-mailIcon icon-mail"></span>
											<button type="submit" class="signUp-submit icon-arrow-right" name="subscribe" id="mc-embedded-subscribe"></button>
										</div>
									</div>
									{% if form.posted_successfully? %}
										<div class="signUp-confirmation p">{{ 'general.newsletter_signup.success_message' | t }}</div>
									{% elsif form.errors %}
										{{ form.errors | default_errors }}
									{% endif %}
								{% endform %}
							{% endif %}

							{% if settings.share_on_facebook or settings.share_on_twitter or settings.share_on_googleplus or settings.share_on_pinterest %}
							<div class="product-share">
								<span class="socialBar p">{% include 'site-shareLinks' %}</span>
							</div>
							{% endif %}

							{% if add_cart_position == 'top' %}
							<div class="product-container">
								<h4>{{ 'products.product_page.intro' | t }}:</h4>
								<div class="product-description">
									{{ product.description }}
								</div>
							</div>
							{% endif %}
							{% if section.settings.enable_good_to_know %}
							{% for tag in product.tags %}
								{% if tag contains "info-" %}
									{% assign showInfoBox = true %}
								{% endif %}
							{% endfor %}
							{% if showInfoBox %}
								<div class="info-boxes">
									<h4>{{ section.settings.info_box_title }}</h4>
									<div class="info-box__wrapper" style="display: flex;flex-direction: row;justify-content: space-between;">
										{% for block in section.blocks %}    
										{% if block.type == 'info-box' %}
											{% for tag in product.tags %}
												{% assign tagHandle = "info-" | append: block.settings.handle %}
												{% if tag contains tagHandle %}
													<div class="info-box">
														<img src="{{ block.settings.image | img_url: 'master'}}" />
														<span>{{ block.settings.text }}</span>
													</div>									
												{% endif %}
											{% endfor %}
										{% endif %}
									{% endfor %}
									</div>
									<h5><a href="#" id="info-popup-open">{{ section.settings.Info_box_link_text }}</a></h5>
									<div id="info-popup" class="modal popup text-center popup--no-image">
										{% for block in section.blocks %}    
											{% if block.type == 'info-modal' %}
												{% for tag in product.tags %}
													{% assign tagHandle = "modal-" | append: block.settings.handle %}
													{% if tag contains tagHandle %}<div class="popup-wrap">
														<div class="popover-popup__header">
															<div class="popover-popup__header-text">{{ block.settings.title }}</div>
															<div class="icon-close"></div>
														</div>
														<div class="inner-content">
															<img src="{{ block.settings.image | img_url: 'master' }}" />
															<h2>{{ block.settings.content_title }}</h2>
															{{ block.settings.text }}
														</div>
													</div>
													{% endif %}
												{% endfor %}
											{% endif %}
										{% endfor %}
									</div>
									<div id="info-pop-overlay"></div>
								</div>
							{% endif %}
						{% endif %}
							{% if settings.share_on_facebook or settings.share_on_twitter or settings.share_on_googleplus or settings.share_on_pinterest %}
								<div class="product-share">
									<span class="socialBar p">{% include 'site-shareLinks' %}</span>
								</div>
							{% endif %}
							{% if tab_1 != blank or tab_2 != blank or tab_3 != blank or show_reviews %}
								<div class="product-tabs js-product-tabs">
									{% if tab_1 != blank %}
										<div class="product-tab">
											<div class="product-tab-title" itemprop="title">{{ pages[tab_1].title }} <span class="icon-toggle"></span></div>
											<div class="product-tab-content" itemprop="content">{{pages[tab_1].content}}</div>
										</div>
									{% endif %}
									{% if tab_2 != blank %}
										<div class="product-tab">
											<div class="product-tab-title" itemprop="title">{{ pages[tab_2].title }} <span class="icon-toggle"></span></div>
											<div class="product-tab-content" itemprop="content">{{pages[tab_2].content}}</div>
										</div>
									{% endif %}
									{% if tab_3 != blank %}
										<div class="product-tab">
											<div class="product-tab-title" itemprop="title">{{ pages[tab_3].title }} <span class="icon-toggle"></span></div>
											<div class="product-tab-content" itemprop="content">{{pages[tab_3].content}}</div>
										</div>
									{% endif %}
								</div>
							{% endif %}

						</div>
					</div>
				</div>
			</div>
		</div>
		<div>
			{% if show_reviews %}
				<div class="product-tab product-tab--reviews">
					<div class="product-tab-content" itemprop="content">
						<div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
					</div>
				</div>
			{% endif %}
		</div>
	</section>

	{% if section.blocks.size > 0 %}
		{% for block in section.blocks %}
			{% case block.type %}
			{% when 'banner' %}
				{% comment %} Banner Settings {% endcomment %}
				{% assign image = block.settings.image %}
				{% assign height = block.settings.height %}
				{% assign subheading = block.settings.subheading %}
				{% assign heading = block.settings.title %}
				{% assign text = block.settings.text %}
				{% assign text_position = block.settings.text_position %}
				{% assign heading_size = block.settings.heading_size %}
				{% assign text_size = block.settings.text_size %}
				{% assign color_text = block.settings.color_text %}
				{% assign color_overlay = block.settings.color_overlay %}
				{% assign overlay_opacity = block.settings.overlay_opacity | times: 0.01 | round: 2 %}

				<style>
					.banner--{{ block.id }} .page-title { color: {{ color_text }}; }
					.banner--{{ block.id }} .page-title h1 { color: {{ color_text }} !important; }
					.banner--{{ block.id }} .page-title::before { background-color: {{ color_overlay }}; opacity: {{ overlay_opacity }}; }
				</style>

				<section class="banner banner--{{ block.id }}" data-block="banner" {{ block.shopify_attributes }}>
					<div class="banner-inner banner-padded banner-padded--{{ height }} banner--text-{{ text_position }}">
						{% unless height == 'original-height' %}
							{% unless image == blank %}
								<div class="banner-img lazyload" data-bgset="{% include 'bgset', image: image %}" data-sizes="auto" data-parent-fit="cover"></div>
								<noscript>
									<div class="banner-img" style="background-image:url('{{image | img_url: '1024x' }}'); background-size: cover; background-position: center center; background-repeat: no-repeat;"></div>
								</noscript>
							{% else %}
								<div class="banner-img banner-img--placeholder svg-placeholder">
									{{ 'image' | placeholder_svg_tag }}
								</div>
							{% endunless %}
						{% else %}
							{% assign image_widths = '295,394,590,700,800,1000,1200,1500,1800,2000,2400' %}
							{% include 'theme-rias' %}
							<img class="banner-img--original lazyload fade-in"
								 data-src="{{ image_url_pattern }}"
								 data-widths="[{{ image_widths }}]"
								 data-aspectratio="{{ image.aspect_ratio }}"
								 data-sizes="auto"
								 alt="{{ image.alt }}">
							<noscript>
								<img src="{{ image | img_url: '2048x' }}" alt="{{ image.alt | escape }}" class="banner-img--original no-js-image">
