<style>
    #shopify-section-{{section.id}} .gitti_item_wrapper{
        border: 1px solid #A6A6A6;
    }
    #shopify-section-{{section.id}} .clever_icon, #shopify-section-{{section.id}} .clever_icon svg{
        width:35px;
        height:30px;
    }
    #shopify-section-{{section.id}} {
        background-color: {{section.settings.color_background}};
    }

</style>

<div class="page-width spacing-top-{{section.settings.spacing_top}} spacing-bottom-{{section.settings.spacing_bottom}}">
    <div class="grid col-{{section.blocks | size | plus: 2 }} grid-gap small_col-1 medium_col-2">
        <div class="grid-item container medium-up_col-span-2 flex col middle left">
            <p class="h2 bold">
                {{section.settings.heading}}
            </p>
            <p class="p">
                {{section.settings.text}}
            </p>
            <div class="spacing-top-m">
                <a href="{{section.settings.link}}" class="btn btn--tertiary">{{section.settings.label}}</a>    
            </div>
            
        </div>
        {% for block in section.blocks %}
          <div class="grid-item container">
             <{% if block.settings.link != blank %}a href="{{block.settings.link}}"{% else %}div{% endif %} div class="gitti_item_wrapper container flex col left spacing-left-s spacing-right-s spacing-top-m spacing-bottom-m">
                {% render 'icon', icon: block.settings.icon %}
                <p class="spacing-top-s h6 bold">
                    {{block.settings.heading}}
                </p>
                <p class="spacing-top-s note">
                    {{block.settings.text}}
                </p>
            </{% if block.settings.link != blank %}a{% else %}div{% endif %}>
          </div>
        {% endfor %}
    </div>
</div>

