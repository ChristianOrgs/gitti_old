<div class="page-width section-spacing"  data-section-type="editor" data-section-id="{{ section.id }}">
    <div class="collection_grid grid small_col-{{section.settings.collections_per_row_mobile}} col-{{section.settings.collections_per_row}} col-gap row-gap small_col-gap-small small_row-gap-small">
        {% paginate collections by section.settings.collections_per_page %}
            {% for collection in collections %}
                {% render 'collection_grid_item_default', collection:collection, section:section, index:forloop.index0 %}
            {% endfor %}
        {% endpaginate %}
    </div>
</div>

{% schema %}
{
  "name": "Collection Grid",
  "settings": [
    {
        "type": "header",
        "content": "Grid"
    },
    {
        "type": "range",
        "id": "collections_per_row",
        "label": "Collections per row",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 3
    },
    {
        "type": "range",
        "id": "collections_per_row_mobile",
        "label": "Collections per row mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
    },
    {
        "type": "range",
        "id": "collections_per_page",
        "label": "Collections per page",
        "min": 16,
        "max": 64,
        "step": 1,
        "default": 24
    },
    {
        "type": "header",
        "content": "Grid item"
    },
    {
        "type": "select",
        "id": "grid_item_style",
        "label": "Content Style",
        "options": [
            {
                "value": "overlayed",
                "label": "overlayed"
            },
            {
                "value": "below",
                "label": "below"
            }
        ],
        "default": "below"
    },
    {
        "type": "range",
        "id": "grid_item_side_spacing",
        "label": "Side spacing",
        "unit": "px",
        "min": 0,
        "max": 20,
        "step": 5,
        "default": 0
    },
    {
        "type": "color",
        "id": "grid_item_background_color",
        "label": "Background_color"
    },
    {
        "type": "header",
        "content": "Image"
    },
    {
        "type":      "select",
        "id":        "image_shape",
        "label":     "Image shape",
        "options": [
        {
            "value": "",
            "label": "Original"
        },
        {
            "value": "square",
            "label": "Square"
        },
        {
            "value": "sixteen_by_nine",
            "label": "16:9"
        },
        {
            "value": "four_by_three",
            "label": "4:3"
        },
        {
            "value": "four_by_five",
            "label": "4:5"
        },
        {
            "value": "circle",
            "label": "Circle"
        }
        ],
        "default":   "square"
    },
    {
        "type":      "select",
        "id":        "image_fit",
        "label":     "Image fit",
        "options": [
        {
            "value": "cover",
            "label": "cover"
        }
        ,
        {
            "value": "contain",
            "label": "contain"
        }
        ],
        "default":   "cover"
    },
    {
        "type": "range",
        "id": "image_spacing_bottom",
        "label": "Spacing bottom",
        "unit": "px",
        "min": 0,
        "max": 50,
        "step": 1,
        "default": 8
    }
  ],
  "blocks": [
    {
        "type": "title",
        "name": "Collection title",
        "limit": 1,
        "settings":[
            {
                "type": "select",
                "id": "text_align",
                "label": "Text align",
                "options": [
                    { "value": "left", "label": "left"},
                    { "value": "center", "label": "center"},
                    { "value": "right", "label": "right"}
                ]
            },
            {
                "type": "select",
                "id": "text_transform",
                "label": "Text transform",
                "options": [
                    {
                        "value": "none",
                        "label": "none"
                    },
                    {
                        "value": "capitalize",
                        "label": "capitalize"
                    },
                    {
                        "value": "uppercase",
                        "label": "uppercase"
                    },
                    {
                        "value": "lowercase",
                        "label": "lowercase"
                    }
                ]
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text color",
                "default": "#000"
            },
            {
                "type": "range",
                "id": "font_size",
                "label": "Font size",
                "unit": "px",
                "min": 5,
                "max": 50,
                "step": 1,
                "default": 16
            },
            {
                "type": "range",
                "id": "spacing_bottom",
                "label": "Spacing bottom",
                "unit": "px",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 8
            }
        ]
    },
    {
        "type": "count",
        "name": "Collection product count",
        "limit": 1,
        "settings":[
            {
                "type": "select",
                "id": "text_align",
                "label": "Text align",
                "options": [
                    { "value": "left", "label": "left"},
                    { "value": "center", "label": "center"},
                    { "value": "right", "label": "right"}
                ]
            },
            {
                "type": "select",
                "id": "text_transform",
                "label": "Text transform",
                "options": [
                    {
                        "value": "none",
                        "label": "none"
                    },
                    {
                        "value": "capitalize",
                        "label": "capitalize"
                    },
                    {
                        "value": "uppercase",
                        "label": "uppercase"
                    },
                    {
                        "value": "lowercase",
                        "label": "lowercase"
                    }
                ]
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text color",
                "default": "#000"
            },
            {
                "type": "range",
                "id": "font_size",
                "label": "Font size",
                "unit": "px",
                "min": 5,
                "max": 50,
                "step": 1,
                "default": 16
            },
            {
                "type": "range",
                "id": "spacing_bottom",
                "label": "Spacing bottom",
                "unit": "px",
                "min": 0,
                "max": 50,
                "step": 1,
                "default": 8
            }
        ]
    }
  ]
}
{% endschema %}