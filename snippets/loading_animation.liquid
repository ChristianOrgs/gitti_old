<style>
    #product_grid {
        /* display: block; */
    }
    .snippet {
        position: relative;
        background: #fff;
        padding: 2rem;
        margin: 1.5rem 0;
        border-radius: .25rem;
    }

    .stage {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        padding: 2rem 0;
        margin: 0 -5%;
        overflow: hidden;
    }

    svg.logo-flashing {
        position: relative;
        margin: 0 auto;
        width: 100px;
        height: 100px;
        border-radius: 5px;
        fill: #f1f1f1;
        animation: svgFlashing .5s infinite alternate;
    }
    {% if css_class == "bc_collection_loading_animation" %}
    .bc_collection_loading_animation {
        width: 100%;
        grid-column-start: 1;
        grid-column-end: 5;
    }
    @media only screen and (max-width: {{settings.breakpoint_small}}px){
        .bc_collection_loading_animation {
            grid-column-end: 3;
        }
    }
    {% endif %}

    @keyframes svgFlashing {
        0% {
            fill: #000;
        }
        100% {
            fill: #f1f1f1;
        }
    }
</style>

