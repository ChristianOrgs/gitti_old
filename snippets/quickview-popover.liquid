<div id="QuickviewPopoverCont" class="header-cartPopover">
		<div class="icon-close quickView-close js-quickView"></div>
		<div class="inner">
		</div>

</div>

<script id="QuickviewPopover" type="text/x-handlebars-template">
	<div class="popover-inner">
		<div class="h3">{% raw %}{{item_count}}{% endraw %} {{ 'cart.labels.items_added' | t }}</div>
		{% raw %}
		<div class="popover-item-thumb" data-bg-src="{{img}}"></div>
		<div class="popover-item-info">
		  <span>{{name}}</span><br/>
		  {{#if variation}}
		  	<span>{{variation}}</span><br/>
		  {{/if}}
      <span>{{{price_formatted}}}</span>
		</div>
		{% endraw %}
	</div>
</script>
